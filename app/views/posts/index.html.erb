<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<ul id='posts'>
  <% @posts.each do |post| %>
    <li id='post_<%= post.id %>'><%= post.title %><%= post.body %>><%= link_to "Delete this Post", post, :method => 'delete'%></li>
  <% end %>
</ul>

<%= link_to "Create a new Post", new_post_path %>
