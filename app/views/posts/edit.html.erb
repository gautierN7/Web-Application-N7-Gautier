<h1>Posts#edit</h1>
<p>Find me in app/views/posts/edit.html.erb</p>
<p style="color : green"> <%= flash[:notice] %></p>
<p style="color : red"> <%= flash[:error] %></p>
<%= form_tag(update_path(@post), :method => "put", :id => 'edit_post') do %>
  <p class="title"><%= label_tag(:post_title, 'Title') %><br/>
  <%= text_field_tag('post[title]', @post.title) %></p>
  <p class="body"><%= label_tag(:post_body, 'Body') %><br/>
  <%= text_area_tag('post[body]', @post.body) %></p>
  <div class="action">
    <div class="boutoncreate"><%= submit_tag("Update Post") %></div>
    <% end %>
    <%= link_to 'Back', root_path, { :method => 'get', :class => "buttonback", :title => "back" }%>
  </div>
